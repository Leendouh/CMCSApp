<style>
    /* Styling for the review container */
    .review-container {
        display: flex;
        flex-direction: column; /* Stack sections vertically */
        justify-content: center; /* Center content horizontally */
        align-items: center; /* Center content vertically */
        padding: 20px;
        margin: 20px auto; /* Center the container horizontally and add vertical margin */
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 80%;
        max-width: 1000px;
        transform: translateX(10px); /* Move the container 10px to the right */
    }

    /* Styling for section headers */
    .review-header {
        margin-bottom: 20px;
        font-size: 1.5rem;
        font-weight: bold;
    }

    /* Styling for review details */
    .review-detail {
        margin-bottom: 10px;
        font-size: 1rem;
        width: 100%;
    }

    /* Styling for buttons */
    .button-group {
        display: flex;
        justify-content: space-between;
        width: 100%;
    }

    .btn {
        width: 48%;
        height: 40px;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
        border: none;
        border-radius: 5px;
    }
</style>

